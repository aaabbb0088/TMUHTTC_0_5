<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="com.test.tonychuang.tmuhttc_0_5.Tab1_person.VP3_board.PersonBoardFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/background_psnnot_table_layout"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/NotRGroup"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/CtrButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_not_radiobutton_topleft"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="中\n心\n訊\n息"
                android:textColor="@color/color_text_blue_radiobutton"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/PsnButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_not_radiobutton_topright"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="個\n人\n訊\n息"
                android:textColor="@color/color_text_blue_radiobutton"
                android:textSize="17sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/CtrNotLv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/PsnNotLv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
