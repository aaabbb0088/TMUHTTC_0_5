<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ruler="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.tonychuang.tmuhttc_0_5.Tab2_friend.Ft2_map.FriendMapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="MM月\ndd日"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.test.tonychuang.timescroller.Ruler
            android:id="@+id/timeRuler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#55AAAAAA"
            android:orientation="horizontal"
            ruler:mark_color="@android:color/white"
            ruler:max_unit_count="24"
            ruler:min_unit_size="3dp"
            ruler:per_unit_count="10"
            ruler:theme="@style/AppTheme"
            ruler:unit_bmp_height="10dp"
            ruler:unit_visible="mid" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView56"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="地圖控件"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
