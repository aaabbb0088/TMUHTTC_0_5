<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <!--layer-list將item所畫的drawable一層層蓋在上面-->
            <item>
                <shape>
                    <corners
                        android:topRightRadius="20dp"
                        />
                    <solid android:color="#FFFFFF" />
                    <padding
                        android:bottom="2px"
                        android:left="2px"
                        android:right="1px"
                        android:top="1px" />
                    <stroke
                        android:width="1dp"
                        android:color="#D7A500"/>
                </shape>
            </item>

            <item >
                <shape >
                    <corners
                        android:topRightRadius="19dp"
                        />
                    <solid android:color="#D7A500"/>
                    <stroke
                        android:width="1dp"
                        android:color="#D7A500"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:topRightRadius="20dp"
                        />
                    <solid android:color="#FFFFFF" />
                    <stroke
                        android:width="1dp"
                        android:color="#D7A500"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>