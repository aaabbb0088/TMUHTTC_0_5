<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Ruler">
        <attr name="min_unit_size" format="dimension" />
        <attr name="max_unit_count" format="integer" />
        <attr name="per_unit_count" format="integer" />
        <attr name="unit_bmp_height" format="dimension" />
        <attr name="ruler_mode" format="enum">
            <enum name="ruler" value="0" />
            <enum name="timeline" value="1" />
        </attr>
        <attr name="unit_visible" format="enum">
            <enum name="max" value="0x1" />
            <enum name="mid" value="0x2" />
            <enum name="min" value="0x4" />
    	</attr>  	
    	<attr name="min_unit" format="float" />
    	<!-- 刻度的颜色 -->
    	 <attr name="unit_color" format="color"/>
    	 <!-- 标记的颜色 -->
         <attr name="mark_color" format="color"/>  
    </declare-styleable>

    <attr name="ruler_style" format="reference" />

</resources>